<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Connect An API Account</h3>
  </div>
  
  <div class="panel-body">

    <div class="row center-block" style="margin-left: .5%;">
      <div id="github">
        <div id="github-image">
          <%= image_tag("githublogo.png", class: "img-cirlce pull-left", style: "margin-left: 20%; margin-right: 15%;", id: "github-logo" ) %>
        </div>
        <h1>Github</h1>
        <br />
        <div id="github_form">
          <%= form_for @api_account do |api| %>
            <%= api.text_field :api_username, placeholder: "Github Username" %>
            <%= api.hidden_field :api_id, :value => @github_api_id %>
            <%= api.submit "Link My Account" %>
          <% end %>
        </div>
        <div style="margin-left: 21%;">
          <% if @github_accounts != nil %>
            <% @github_accounts.each do |github_account| %>
              <li><%= github_account.api_username %></li>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row" style="margin-left: .5%;">
      <div id="duolingo">
        <div id="duolingo-image">
          <%= image_tag("duolingologo.png", class: "img-cirlce pull-left", style: "margin-left: 20%; margin-right: 15%;", id: "duolingo-logo") %>
        </div>
        <h1>Duolingo</h1>
        <br />
        <div id="duolingo_form">
          <%= form_for @api_account do |api| %>
            <%= api.text_field :api_username, placeholder: "Duolingo Username" %>
            <%= api.hidden_field :api_id, :value => @duolingo_api_id %>
            <%= api.submit "Link My Account" %>
          <% end %>
        </div>
        <div style="margin-left: 21%;">
          <% if @duolingo_accounts != nil %>
            <% @duolingo_accounts.each do |duolingo_account| %>
              <li><%= duolingo_account.api_username %></li>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row" style="margin-left: .5%; margin-bottom: 10%;">
      <div id="exercism">
        <div id="exercism-image">
          <%= image_tag("exercismlogo.png", class: "img-cirlce pull-left", style: "margin-left: 20%; margin-right: 15%;", id: "exercism-logo") %>
        </div>
        <h1>Exercism</h1>
        <br />
        <div id="exercism_form">
          <%= form_for @api_account do |api| %>
            <%= api.text_field :api_username, placeholder: "Exercism Username" %>
            <%= api.hidden_field :api_id, :value => @exercism_api_id %>
            <%= api.submit "Link My Account" %>
          <% end %>
        </div>
        <div style="margin-left: 21%;">
          <% if @exercism_accounts != nil %>
            <% @exercism_accounts.each do |exercism_account| %>
              <li><%= exercism_account.api_username %></li>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
