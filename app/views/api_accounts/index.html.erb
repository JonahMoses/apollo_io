<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Connect An API Account</h3>
  </div>
  
  <div class="panel-body">

    <div class="col-md-3" style="margin-top: .5%">

      <div id="github_form">
        Github
        <%= form_for @api_account do |api| %>
          <%= api.label :api_username %>
          <%= api.text_field :api_username %>
          <%= api.hidden_field :api_id, :value => @github_api_id %>
          <%= api.submit "Link My Account" %>
        <% end %>
      </div>

      <div id="fitbit_form">
        Fitbit
        <%= form_for @api_account do |api| %>
          <%= api.label :api_username %>
          <%= api.text_field :api_username %>
          <%= api.hidden_field :api_id, :value => @fitbit_api_id %>
          <%= api.submit "Link My Account" %>
        <% end %>
      </div>

      <div id="exercism_form">
        Exercism.io
        <%= form_for @api_account do |api| %>
          <%= api.label :api_username %>
          <%= api.text_field :api_username %>
          <%= api.hidden_field :api_id, :value => @exercism_api_id %>
          <%= api.submit "Link My Account" %>
        <% end %>
      </div>
    </div>

    <% if @api_accounts.count > 0 %>
      <div class="col-md-6" >
        <h4>Currently Added API Accounts:</h4>
        <% @api_accounts.each do |api_account| %>
          <%= image_tag "small-#{api_account.api.image_url}", id: "#{api_account.api.provider.downcase}-logo"%>
          <h3><%= api_account.api.provider %></h3>
          <h4><%= link_to api_account.api_username, api_account_path(api_account) %></h4>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
