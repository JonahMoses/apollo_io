<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Connect An API Account</h3>
  </div>
  
  <div class="panel-body">

    <div class="row center-block" style="margin-top: .5%; margin-left: .5%;">
      <div id="github">
        <div id="github-image">
          <%= image_tag("githublogo.png", class: "img-cirlce pull-left", style: "margin-left: 20%; margin-right: 15%;", id: "github-logo" ) %>
        </div>
        <h1>Github</h1>
        <br />
        <div id="github_form">
          <%= form_for @api_account do |api| %>
            <%= api.text_field :api_username, placeholder: "Github Username" %>
            <%= api.hidden_field :api_id, :value => @github_api_id %>
            <%= api.submit "Link My Account" %>
          <% end %>
        </div>
        <div style="margin-left: 21%;">
          <% @github_accounts.each do |github_account| %>
            <li><%= github_account.api_username %></li>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row" style="margin-top: .5%; margin-left: .5%;">
      <div id="fitbit">
        <div id="fitbit-image">
          <%= image_tag("fitbitlogo.png", class: "img-cirlce pull-left", style: "margin-left: 20%; margin-right: 15%;", id: "fitbit-logo") %>
