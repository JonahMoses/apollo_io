            <%= api.hidden_field :api_id, :value => @fitbit_api_id %>
            <%= api.submit "Link My Account" %>
          <% end %>
        </div>
        <div style="margin-left: 21%;">
          <% @fitbit_accounts.each do |fitbit_account| %>
            <li><%= fitbit_account.api_username %></li>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row" style="margin-top: .5%; margin-left: .5%;">
      <div id="exercism">
        <div id="exercism-image">
          <%= image_tag("exercismlogo.png", class: "img-cirlce pull-left", style: "margin-left: 20%; margin-right: 15%;", id: "exercism-logo") %>
        </div>
        <h1>Exercism</h1>
        <br />
        <div id="exercism_form">
          <%= form_for @api_account do |api| %>
