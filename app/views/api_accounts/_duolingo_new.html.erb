
  <div class="col-md-4">
    <div id="duolingo-image" style="margin-left: 20%">
        <%= image_tag("duolingologo.png", id: "duolingo-logo") %>
    </div>
  </div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h1>Duolingo</h1>
      </div>
      <div class="panel-body">
        <div id="duolingo_form">
            <%= form_for @api_account do |api| %>
              <%= api.text_field :api_username, placeholder: "Duolingo Username" %>
              <%= api.hidden_field :api_id, :value => @duolingo_api_id %>
              <%= api.submit "Link My Account" %>
            <% end %>
        </div>
      <div id="api_account_listings">
        <% if @duolingo_accounts != nil %>
          <ul class="list-group">
            <h4>Linked Accounts</h4>
            <% @duolingo_accounts.each do |duolingo_account| %>
              <h4><li class="list-group-item"><%= link_to duolingo_account.api_username, api_account_path(duolingo_account) %></li></h4>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>



