<div class="row">
  <div class="col-md-4">
    <%= image_tag("small-#{@api_account.api.image_url}") %>
    <div class="api-account-title">
      <h2><%= @api_account.api_username %> <small><%= @provider %></small></h2>
    </div>
  </div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body center-block">
        <%= render partial: "#{@provider}_show" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <h4>My Goals</h4>
    <% @goals.each do |goal| %>
      <%= goal.pledge %>
    <% end %>
  <div>
    <br>
    <%= button_to "Add A Goal", new_goal_path, method: :get %>
  </div>
  </div>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body center-block">
        <%= render partial: "#{@provider}_graph" %>
      </div>
    </div>
  </div>
</div>
