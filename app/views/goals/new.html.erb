<h1>Create New Goal</h1>

<div class="api_selection">
  <select id="api_selection" name="api_selection">
    <option value="" disabled="disabled" selected="selected">Please Select An Account</option>
    <option value="Github">Github</option>
    <option value="Fitbit">Fitbit</option>
    <option value="Exercism">Exercism</option>
  </select>
</div>

<br />

<div id="github_form" style="display: none;" class="forms form-inline">
  <%= form_for @goal, :html => {:id => "Github"} do |g| %>
    <%= g.label :name, "Goal Name" %>
    <%= g.text_field :name, class: "form-control" %>
    <br>
    <%= g.label :description, "Goal Description" %>
    <%= g.text_field :description, class: "form-control"  %>
    <br>
    <%= g.label :target, "Target" %>
    <%= g.select(:target, [1,2,3,4,5]) %>
    <br>
    <%= g.label :period, "Period" %>
    <%= g.select(:period, [1,2,3,4,5]) %>
    <br>
    <%= g.label :period_type, "Period Type" %>
    <%= g.select(:period_type, ["Day", "Week", "Month"]) %>
    <br>
    <%= g.label :start_date, "Start Date" %>
    <%= g.date_field :start_date %>
    <br>
    <%= g.hidden_field :api_account_id, :value => 1 %>
    <%= g.submit "Submit Goal" %>
  <% end %>
</div>

<div id="fitbit_form" style="display: none;" class="forms">
FITBIT
</div>

<div id="exercism_form" style="display: none;" class="forms">
exercism
</div>

<script>
  $('#api_selection').change(function(){
    $(".forms").hide()
    switch ($('select option:selected').val()){
      case "Github":
        $('#github_form').show();
        break
      case "Fitbit":
        $('#fitbit_form').show();
        break
      case "Exercism":
        $('#exercism_form').show();
    }
  });
</script>
